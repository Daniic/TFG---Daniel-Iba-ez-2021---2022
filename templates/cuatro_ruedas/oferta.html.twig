{% extends 'base.html.twig' %}

{% block title %}RuedaQueRueda
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/cuatro.css') }} ">
	<link rel="stylesheet" href="{{ asset('css/header.css') }} ">
{% endblock %}
{% block body %}
	{% include "header.html.twig" %}
	<div class="row d-flex justify-content-evenly mt-5 p-5 flex-column">
		{% if oferta %}
			<div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 col-12   foto text-center">
				<img class="w-100" src="{{ asset('imgs/ofertas/' ~ oferta.foto )}}">
			</div>
			<div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 col-12  text-center tituloCoche mb-5 ">
				<h1 class="articuloTitulo fw-bold">{{oferta.modelo}}</h1>
				<h3>{{oferta.precio}}
					€</h3>
			</div>
			<div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 col-12  datosCoche">
				<h4>Descripción</h4>
				<p class="mt-2 mb-3">{{oferta.descripcion}}</p>
				<hr>
				<h4 class="mt-3">Ficha Técnica</h4>
				<div class="fichaTecnica row d-flex justify-content-center">
					<div class="col-6 row  text-start">
						<p class="col-6">Potencia</p>
						<p class="col-6">{{oferta.cv}}
							CV</p>
					</div>
					<div class="col-6 row">
						<p class="col-6">Cilindrada</p>
						<p class="col-6">{{oferta.cilindrada}}
							cc</p>
					</div>
					<div class="col-6 row">
						<p class="col-6">Color</p>
						<p class="col-6">{{oferta.color}}</p>
					</div>
					<div class="col-6 row">
						<p class="col-6">Kilometraje</p>
						<p class="col-6">{{oferta.km}}
							Km</p>
					</div>
					<div class="col-6 row">
						<p class="col-6">Plazas</p>
						<p class="col-6">{{oferta.plazas}}</p>
					</div>
					<div class="col-6 row">
						<p class="col-6">Puertas</p>
						<p class="col-6">{{oferta.puertas}}</p>
					</div>
					<div class="col-6 row">
						<p class="col-6">Cambio</p>
						<p class="col-6">{{oferta.cambio}}</p>
					</div>
					<div class="col-6 row">
						<p class="col-6">Combustible</p>
						<p class="col-6">{{oferta.combustible}}</p>
					</div>
				</div>
			</div>
			<div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 col-12  datosVendedor row d-flex mt-5 justify-content-center">
				<h4>Datos del vendedor</h4>

				<div class="col-12 row">
					<p class="col-6">Nick:
					</p>
					<p class="col-6">{{vendedor.nick}}</p>

				</div>
				<div class="col-12 row">
					<p class="col-6">Email:
					</p>
					<p class="col-6">{{vendedor.email}}</p>
				</div>
				<div class="col-12 row">
					<p class="col-6">Tlf:
					</p>
					<p class="col-6">{{vendedor.telefono}}</p>
				</div>

			</div>
			{% if vendedor == usuario %}
				<div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 col-12 eliminarOferta text-center mt-5 p-2">
					<a class="text-danger" href="/cuatroRuedas/borrarOferta/{{oferta.id}}">Eliminar oferta
						<i class="fa-solid fa-trash"></i>
					</a><br><br>
					<div>
						<a href="/cuatroRuedas/inicio" class="volver">
							<i class="fa-solid fa-arrow-left"></i>
							Volver</a>
					</div>
				</div>
			{% endif %}


		{% else %}
			<h1>No se ha encontrado la oferta</h1>
		{% endif %}
	</div>

{% endblock %}
